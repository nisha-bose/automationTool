{
    "name": "Automation Extension",
    "version": "1.0",
    "description": "MAVA Partners",
    "permissions": ["declarativeContent","activeTab", "storage","activeTab","tabs","<all_urls>", "cookies"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js":["content.js"]
      }],

    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      }
    },
    "icons": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    },
    "update_url": "http://www.example.com/update.xml",
    "manifest_version": 2
  }